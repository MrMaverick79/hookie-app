<div class="new_link_form">
    <% if @link.errors.any? %>
        <strong>Please corrrect the following:</strong>
        <ul>
            <% @link.errors.full_messages.each do |e| %>
                <li><%= e %></li>

            <% end %>
        </ul>

    <% end  %>

    <%= form_with model: @link, local: true do |f| %>
        
        <%= f.text_field :name, placeholder: "Name of link" %>
        <br>
        
        <%= f.text_field :url, placeholder: "URL" %>
        <br>
        <%= f.text_area :notes, placeholder: "You can make a note about this link here", size: "40x10" %>
        <br>
        <%= f.label :nsfw, 'Safe for work:'%>
        <%= f.radio_button  :nsfw, true %>Yes
        <%= f.radio_button  :nsfw, false %>No<br>
        <br>

        <%= f.label :hook_id, 'Add to Hook:' %>
        <%= f.collection_select :hook_id, Hook.where(user_id: @current_user.id), :id, :title %>
        <br>
        
        <%= f.text_field :tag_id, placeholder: "Tag this link as" %>

        <%= f.submit %>
    <% end %>
</div>