<div class="login_container">

    <h2>All Links</h2>
    <%= link_to 'Add New Link', new_link_path, class:'button' %>
    <div class="login_form" id="links_list">
         

        <ul>
        <% for link in @links.sort{|a,b| a.name <=> b.name } %>
             <% link.hooks.each do |hook| %>
                    <% if hook.user.id == @current_user.id %>
                        <li><strong><%=  link_to link.name, edit_link_path(link.id) %>:</strong> <%= link_to link.url  %></li>
                        <li class="links_notes"><%= link.notes %></li>
                        <li><% if link.nsfw %>  <%= image_tag "exclamation.png" %>
                            <% end %>
                        <%=  %>
                        </li>
                        <hr>
                    <% end  %>
                <% end  %>    
            
        <% end %>
        </ul>
      
    </div>
        

</div>

