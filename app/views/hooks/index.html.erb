


<div id="index_box">
    <h2 class="hooks_main_title">My Hookmarks</h2>
    <% @hooks.each do |hook| %>    
        <% if @current_user.present? && hook.user.id == @current_user.id %>
    
        <div class="hook_container">
            <div class="color_label", style= "background-color:<%= hook.color %>">
            </div>
            <div class="hook_title">
                <h3>
                    <%= hook.title %>
                </h3>
                <%= link_to image_tag("pencil.png"), edit_hook_path(hook.id), class:"more_icon"  %>

            </div>

            <div class="notes">
                <p><%= hook.note %></p>
            </div>
            <div class="tags_container">
                <% hook.links.each do |l| %>
                    <% l.tags. each do |tag|  %>
                        <% unless tag.name.strip.empty? %>
                            <p class ="tags">#<%= tag.name %></p>
                        <% end %>
                    <% end %>
                <% end %>
            </div>
            
            <% hook.links.each do |l| %>
            <ul class="links_list">
                <li>
                <% if  l.icon?%>
                    <% if l.url[0..3] == 'http' %>
                       <%= image_tag l.icon %>

                    <% else %>
                         <%= image_tag  'http://' + l.icon %>
                    <% end  %>
                <% end  %>
                </li>
                <li>
                    <%= link_to l.name, l.url, class:"link_name" %> (<%=link_to l.url  %>) <%= link_to image_tag('pencil.png') , edit_link_path(l.id), class:"edit_delete_icons", id:"pencil_icon"%> <%= image_tag 'bin.png', class:"edit_delete_icons", onclick:"javascript:linkDelete(#{l.id})" %>
                    
                </li>

                
                
               
            </ul>
                
       
            <% end %>
            <div class="new_link_hidden">
                <ul>
                    <li class="add_icon"><label for="add_new_link_icon">
                    <%= image_tag "plus.png", class:"add_icon", name: "add_new_link_icon"%>
                    Add New Link</li>
                    <li><li class="hidden_link_form">
                    <%= render partial: "/links/form" , class:"hidden_link_form" %> </li>
                </ul>
                </label>
            
            </div>
                    
            </div>

            
        </div>  
    
    <% end %> 


          
   <% end %>
    <div class="hidden">
        <label for="add_new_hook_image">
            <%= image_tag "plus.png", id:"add_new_hook_image", onclick:"javascript:showHidden()", name:"add_new_hook_image"  %>
            
        </label>
        <div class="add_new_hook">  
            <h2>Add New Hookmark</h2>
            <%= render partial: 'form' %>

        </div>
    </div>
    
     
</div>


